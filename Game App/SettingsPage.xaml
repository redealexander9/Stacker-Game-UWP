<Page
    x:Class="Game_App.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Game_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#FF00F0FF">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <TextBlock x:Name="SettingsTitleText" 
                   HorizontalAlignment="Center" 
                   TextWrapping="Wrap" 
                   Text="Settings" 
                   Grid.Row="0"
                   VerticalAlignment="Top" 
                   Height="108" Width="263" 
                   FontSize="72" 
                   Foreground="#FF0A0A23"/>
        
        <TextBlock HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Block Movement Speed:" VerticalAlignment="Center" Margin="0,0,179,0" FontSize="16"/>
        <Slider x:Name="SpeedSlider" HorizontalAlignment="Center" 
                Grid.Row="1"
                VerticalAlignment="Center" 
                Width="360" Height="36" 
                Value="1" Maximum="5" 
                Minimum="1" 
                Background="#FF00001E" 
                TickFrequency="1" Margin="0,51,0,0"/>



    </Grid>
</Page>
